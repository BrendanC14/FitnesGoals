<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/allBadgesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/allBadgesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        style="@style/TextAppearance.FitnessGoals.WhiteTitle"
        android:text="@string/all_badges_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allBadgesCloseButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

    </TextView>

    <Button
        android:id="@+id/allBadgesCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/allBadgesTitle"
        app:layout_constraintBottom_toBottomOf="@+id/allBadgesTitle"
        style="@style/Widget.FitnessGoals.Button.TextButton"
        android:text="@string/close_text">

    </Button>

    <TextView
        android:id="@+id/allBadgesAchievedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        style="@style/TextAppearance.FitnessGoals.NormalText"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allBadgesTitle">

    </TextView>

    <GridView
        android:id="@+id/allBadgesGridView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/allBadgesAchievedText"
        android:layout_marginBottom="8dp"
        >

    </GridView>

</androidx.constraintlayout.widget.ConstraintLayout>