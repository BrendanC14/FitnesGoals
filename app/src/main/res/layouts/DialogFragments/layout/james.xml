<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jamesLayout"
    app:layout_anchorGravity="bottom"
    android:foregroundGravity="bottom"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/jamesImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/content_description_james"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/james" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jamesSpeechBubble"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/rounded_menu"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/jamesImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/jamesPrevious"
            style="@style/Widget.FitnessGoals.Button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:onClick="previousJames"
            android:text="@string/previous_arrows_button_text"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/jamesDone"
            app:layout_constraintTop_toTopOf="@id/jamesDone"
            app:layout_constraintBottom_toBottomOf="@id/jamesDone" />

        <Button
            android:id="@+id/jamesDone"
            style="@style/Widget.FitnessGoals.Button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:maxLines="1"
            android:onClick="doneJames"
            android:text="@string/done_button_text"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jamesSpeechText" />

        <Button
            android:id="@+id/jamesNext"
            style="@style/Widget.FitnessGoals.Button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:onClick="nextJames"
            android:text="@string/next_arrows_button_text"
            app:layout_constraintStart_toEndOf="@id/jamesDone"
            app:layout_constraintTop_toTopOf="@id/jamesDone"
            app:layout_constraintBottom_toBottomOf="@id/jamesDone">

        </Button>

        <TextView
            android:id="@+id/jamesSpeechText"
            style="@style/TextAppearance.FitnessGoals.SpeechText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/speech_bubble"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>