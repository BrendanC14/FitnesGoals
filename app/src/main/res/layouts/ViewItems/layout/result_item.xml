<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fullTableBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/resultItemDate"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/league_table_team_column"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/resultItemHomePos"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="12sp">

    </TextView>

    <TextView
        android:id="@+id/resultItemHomeTeam"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/league_table_team_column"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/resultItemHomeScore"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/league_table_games_played_column"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/resultItemVs"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/versus"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/resultItemAwayScore"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/league_table_games_played_column"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/resultItemAwayTeam"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/league_table_team_column"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/resultItemAwayPos"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="12sp">

    </TextView>


</LinearLayout>