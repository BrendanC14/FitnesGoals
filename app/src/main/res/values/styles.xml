<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FitnessGoals" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.FitnessGoals.Backdrop" parent="">
        <item name="android:background">?android:attr/colorAccent</item>
    </style>

    <style name="Widget.FitnessGoals.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.FitnessGoals.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.FitnessGoals.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.FitnessGoals.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="materialButtonOutlinedStyle">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_button_state_list_anim
        </item>
    </style>

    <style name="Widget.FitnessGoals.FilterButton" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="materialButtonOutlinedStyle">@color/colorFilter</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_button_state_list_anim
        </item>
    </style>


    <style name="Widget.FitnessGoals.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.FitnessGoals.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextAppearance.FitnessGoals.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">24dp</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="TextAppearance.FitnessGoals.WhiteTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="color">@color/colorWhite</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">24dp</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.FitnessGoals.NormalText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.FitnessGoals.SpeechText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">114dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">16dp</item>
        <item name="autoSizeMaxTextSize">18dp</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
