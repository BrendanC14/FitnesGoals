<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FitnessGoals" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.FitnessGoals.Backdrop" parent="">
        <item name="android:background">?android:attr/colorAccent</item>
    </style>

    <style name="Widget.FitnessGoals.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.FitnessGoals.TextInputLayout.HintText</item>

    </style>

    <style name="TextAppearance.FitnessGoals.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="Widget.FitnessGoals.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="materialButtonOutlinedStyle">@color/colorAccent</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_button_state_list_anim
        </item>
    </style>

    <style name="Widget.FitnessGoals.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="TextAppearance.FitnessGoals.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.FitnessGoals.SpeechText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">114dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">16dp</item>
        <item name="autoSizeMaxTextSize">18dp</item>
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
